#include <stdlib.h>
#include <time.h>
/**
 * function that checks if a number is negative or positive
 *
 * Return: 0
 */
int main(void)
{
  
	int n;


	srand(time(0));
	n = rand() - RAND_MAX / 2;
	if (n > 0)
	{
		printf("%d is positive", n);
	}
        else
        {
		printf("%d is negative", n);
	}